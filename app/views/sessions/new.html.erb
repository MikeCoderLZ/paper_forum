<div class="tile wide">

<h1 class="label"> Sign In </h1>

<%= form_for(:session, url: login_path) do |f| %>

     <%= render 'shared/error_messages' %> 

    <%= f.label :email %>
    <%= f.email_field :email, class: 'field' %>
    
    <%= f.label :password %>
    <%= link_to "(forgot password)", new_password_reset_path %>
    <%= f.password_field :password, class: 'field' %>
    
    <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</spen>
    <% end %>
    
    <%= f.submit "log in", class: "btn_blank" %>

<% end %>


<%= link_to 'New Account', new_user_path, class: "btn_blank label" %>
</div>
